<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movieItemContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="4dp"
    android:elevation="14dp"
    android:foreground="?android:attr/selectableItemBackground"
    tools:layout_margin="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="19">

        <ImageView
            android:id="@+id/movieImage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:adjustViewBounds="true"
            android:minHeight="80dp"
            android:scaleType="fitXY"
            android:transitionName="@string/fragment_image_trans" />

        <RelativeLayout
            android:id="@+id/movieDataContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@id/movieImage"
            android:layout_gravity="bottom"
            android:layout_weight="4"
            android:gravity="bottom">

            <TextView
                android:id="@+id/movieTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="left"
                android:lines="1"
                android:maxLines="1"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="6dp"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/movieGenres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/movieTitle"
                android:ellipsize="end"
                android:lines="1"
                android:paddingBottom="6dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="Drama, AcciÃ³n, Terror, Aventura"
                android:textSize="15sp" />

            <ImageButton
                android:id="@+id/movieFavButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:background="@android:color/transparent"
                android:src="@android:drawable/btn_star" />

        </RelativeLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>